<Window x:Class="PAMP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PAMP"
        mc:Ignorable="d"
        Title="PAMP Launcher" Height="350" Width="550" ResizeMode="CanMinimize"
        Background="#f7f7f7"
        Icon="/pamp_icon.ico">


    <Grid Margin="0,0,0,5" Width="auto">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <DockPanel Grid.Row="0" Grid.ColumnSpan="2">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="Logi" Click="BtnShowLogs_Click"/>
                <MenuItem Header="Narzędzia">
                    <MenuItem Header="Otwórz konsolę SQL" Click="BtnOpenSqlShell_Click"/>
                    <MenuItem Header="Otwórz localhost" Click="BtnOpenLocalhost_Click"/>
                    <MenuItem Header="Otwórz phpMyAdmin" Click="BtnOpenPma_Click"/>
                    <MenuItem Header="Otwórz folder WWW" Click="BtnOpenFolder_Click"/>
                    <Separator/>
                    <MenuItem Header="Resetuj bazę danych" FontWeight="Bold" Foreground="Red" Click="BtnFactoryReset_Click"/>
                </MenuItem>
                <MenuItem Header="Pomoc">
                    <MenuItem Header="O programie" Click="BtnShowAbout_Click"/>
                </MenuItem>
                <MenuItem Header="Wyjdź" Click="Exit_Click"/>
            </Menu>
        </DockPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <StackPanel Orientation="Vertical" Grid.Column="0">
                <Image Height="100" Width="213" Source="/pamp_logo_min.png" Stretch="UniformToFill" HorizontalAlignment="Center"/>
                <TextBlock x:Name="TxtPampVersion" Text="Wersja 1.0" Foreground="Black" FontSize="15" Margin="0,0,0,0" Width="auto" HorizontalAlignment="Center"/>
            </StackPanel>
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Column="0" Grid.Row="0" Text="Apache:" FontWeight="Bold"></TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="1" Text="MariaDB:" FontWeight="Bold"></TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="2" Text="phpMyAdmin:" FontWeight="Bold"></TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="3" Text="PHP:" FontWeight="Bold"></TextBlock>

                <TextBlock x:Name="TxtApacheVersion" Grid.Column="1" Grid.Row="0" Text="2.4.58" Margin="15 0 0 0"></TextBlock>
                <TextBlock x:Name="TxtMariaDbVersion" Grid.Column="1" Grid.Row="1" Text="10.4.32" Margin="15 0 0 0"></TextBlock>
                <TextBlock x:Name="TxtPMAVersion" Grid.Column="1" Grid.Row="2" Text="5.2.1" Margin="15 0 0 0"></TextBlock>
                <TextBlock x:Name="TxtPhpVersion" Grid.Column="1" Grid.Row="3" Text="8.2.12" Margin="15 0 0 0"></TextBlock>
            </Grid>
        </StackPanel>
        
        <Border Grid.Column="0" Grid.Row="2" BorderBrush="LightGray" BorderThickness="1" Margin="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" MinWidth="100" />
                    <ColumnDefinition Width="auto" MinWidth="80" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <!-- Header -->
                <TextBlock Grid.Row="0" Grid.Column="1" Margin="2" Text="Nazwa" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="0" Grid.Column="2" Margin="2" Text="Port" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                <!-- Apache -->
                <Ellipse Grid.Row="1" Grid.Column="0" Margin="5" x:Name="ApacheStatusDot" Width="15" Height="15" Fill="Red" Stroke="Gray" VerticalAlignment="Center" />
                <TextBlock Grid.Row="1" Grid.Column="1" Text="Apache" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <TextBlock x:Name="apachePortBlock" Grid.Row="1" Grid.Column="2" Text="..." FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <Button x:Name="apacheBtn" Grid.Row="1" Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Center" Padding="15 5 15 5" Margin="5" Tag="apache" Click="BtnToggleServer_Click">Start</Button>

                <!-- MariaDB -->
                <Ellipse Grid.Row="2" Grid.Column="0" Margin="5" x:Name="DbStatusDot" Width="15" Height="15" Fill="Red" Stroke="Gray" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="2" Grid.Column="1" Text="MariaDB" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <TextBlock x:Name="dbPortBlock" Grid.Row="2" Grid.Column="2" Text="..." FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <Button x:Name="mysqlBtn" Grid.Row="2" Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Center" Padding="15 5 15 5" Margin="5" Tag="mysql" Click="BtnToggleServer_Click">Start</Button>

            </Grid>
        </Border>

        <Grid Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="1" Grid.RowSpan="2">
                <Button Content="Otwórz: localhost" Height="22" Padding="5 0 5 0" Margin="0,0,0,10" Click="BtnOpenLocalhost_Click"/>
                <Button Content="Otwórz: phpMyAdmin" Height="22" Padding="5 0 5 0" Margin="0,0,0,10" Click="BtnOpenPma_Click"/>
                <Button Content="Folder WWW (htdocs)" Padding="5 0 5 0" Margin="0,0,0,10" Height="22" Click="BtnOpenFolder_Click"/>
                <Button Content="Konsola SQL" Click="BtnOpenSqlShell_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>